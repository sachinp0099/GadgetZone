<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./component/header',{data:{title:"index page"}}) %>
</head>

<body>
    <div class="col-6">
        <div class="col-12" id="first-div">
            <form action="/register" method="post">
                <p>User Register</p>
                <label for="name">First name:</label>
                <input type="text" id="name" name="name" required><br><br>

                <label for="Email">Email:</label>
                <input type="email" id="Email" name="email"><br><br>

                <label for="Contact">Contact:</label>
                <input type="text" id="Contact" name="phone"><br><br>

                <span class="pass">
                    <label for="sachin">Password:</label>
                    <input type="password" id="sachin" name="password">

                    <input type="checkbox" onclick="myFunction()"><br><br>
                </span>
                <input type="submit" value="Submit">
            </form>

        </div>
        <div class="col-12" id="second_div">
            <form action="/login" method="post">
                <p>User Login</p>

                <label for="Email">Email:</label>
                <input type="email" id="Email" name="email"><br><br>

                <label for="sachin">Password:</label>

                <input type="password" id="sachin" name="password">
                <input type="checkbox" onclick="myFunction()">

                <input type="submit" value="Submit">
            </form>


            <script>
                function myFunction() {
                    let x = document.getElementById("sachin");
                    console.log(x)
                    if (x.type === "password") {
                        x.type = "text";
                    } else {
                        x.type = "password";
                    }

                }
            </script>

        </div>
    </div>
    <div class="col-12">
        <button id="fp"> first page </button>
        <button id="sp"> Second page </button>
    </div>

 <%-include ('./component/footer')%>
</body>

</html>